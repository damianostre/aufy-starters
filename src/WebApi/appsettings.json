  },
  "Aufy": {
    "ClientApp": {
      "BaseUrl": "https://localhost:5000"
    },
    "JwtBearer": {
      "SigningKey": "SUPER_SECRET_SERVER_KEY_QWEMSKSUDNSUCNUSCNSCNISC",
      "Issuer": "Aufy.WebApi",
      "Audience": "Aufy.Client",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "Aufy": "Debug"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
